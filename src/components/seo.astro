---
import type { CollectionEntry } from 'astro:content'

export interface Props {
  title?: string | undefined
  description?: string | undefined
  site: CollectionEntry<'site'>
}

const { title, description, site } = Astro.props
---

{/* mandatory things */}
<title>{title ? `${title} \u2014 ${site.data.title}` : site.data.title}</title>
<meta name='description' content={description || site.data.description} />
<link rel='canonical' href={Astro.url} />

{/* link rels */}
<link rel='sitemap' href={new URL('/sitemap-index.xml', Astro.url.origin)} />
<link
  rel='alternate'
  href={new URL('/rss.xml', Astro.url.origin)}
  type='application/rss+xml'
  title='RSS'
/>
<!-- <link rel='manifest' href='/manifest.json' /> -->

{/* icons */}
<link rel='icon' href='/favicon.ico' sizes='48x48' />
<link rel='icon' href='/favicon.svg' sizes='any' type='image/svg+xml' />
<link rel='apple-touch-icon' href='/apple-touch-icon-180x180.png' />

